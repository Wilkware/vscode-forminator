{
    "name": "forminator",
    "displayName": "%displayName%",
    "description": "%description%",
    "version": "2.0.0",
    "publisher": "wilkware-vscode",
    "author": {
        "name": "Heiko Wilknitz",
        "url": "https://wilkware.de"
    },
    "license": "CC BY-NC-SA 4.0",
    "repository": {
        "url": "https://github.com/Wilkware/vscode-forminator"
    },
    "bugs": {
        "url": "https://github.com/Wilkware/vscode-forminator/issues",
        "email": "heiko@wilkware.de"
    },
    "homepage": "https://github.com/Wilkware/vscode-forminator/blob/main/README.md",
    "galleryBanner": {
        "color": "#24625B",
        "theme": "dark"
    },
    "categories": [
        "Snippets",
        "Visualization",
        "Other"
    ],
    "keywords": [
        "symcon",
        "module",
        "preview",
        "form.json",
        "smart home",
        "ips",
        "php"
    ],
    "engines": {
        "vscode": "^1.73.0"
    },
    "activationEvents": [
        "onStartupFinished",
        "onLanguage:json"
    ],
    "main": "./dist/extension.js",
    "icon": "resources/icon.png",
    "l10n": "./l10n",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "symconForm",
                    "title": "%sidebar.viewTitle%",
                    "icon": "resources/sidebar.svg"
                }
            ]
        },
        "views": {
            "symconForm": [
                {
                    "type": "webview",
                    "id": "symconForm.sidebar",
                    "name": "%sidebar.viewName%",
                    "icon": "resources/sidebar.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "addTranslationToLocale",
                "title": "%command.addTranslationTitle%",
                "category": "Symcon"
            },
            {
                "command": "insertRegisterProperties",
                "title": "%command.insertRegisterTitle%",
                "category": "Symcon"
            },
            {
                "command": "openPreviewVisualisation",
                "title": "%command.openPreviewTitle%",
                "category": "Symcon"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "addTranslationToLocale",
                    "when": "resourceFilename == form.json",
                    "group": "navigation"
                },
                {
                    "command": "insertRegisterProperties",
                    "when": "resourceFilename == module.php",
                    "group": "navigation"
                },
                {
                    "command": "openPreviewVisualisation",
                    "when": "resourceFilename == module.html",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "%displayName%",
            "properties": {
                "symcon.form.alwaysIncludes": {
                    "title": "%config.alwaysIncludesTitle%",
                    "type": "string",
                    "default": "name,caption",
                    "description": "%config.alwaysIncludesDesc%"
                },
                "symcon.form.emptyValues": {
                    "title": "%config.emptyValuesTitle%",
                    "type": "boolean",
                    "default": true,
                    "description": "%config.emptyValuesDesc%"
                },
                "symcon.form.deleteDefaults": {
                    "title": "%config.deleteDefaultsTitle%",
                    "type": "boolean",
                    "default": false,
                    "description": "%config.deleteDefaultsDesc%"
                },
                "symcon.form.defaultWidth": {
                    "title": "%config.defaultWidthTitle%",
                    "type": "string",
                    "default": "",
                    "description": "%config.defaultWidthDesc%"
                },
                "symcon.preview.serverIP": {
                    "title": "%config.serverIPTitle%",
                    "type": "string",
                    "default": "127.0.0.1",
                    "description": "%config.serverIPDesc%"
                },
                "symcon.preview.serverPort": {
                    "title": "%config.serverPortTitle%",
                    "type": "string",
                    "default": "3777",
                    "description": "%config.serverPortDesc%"
                },
                "symcon.preview.themes": {
                    "title": "%config.themesTitle%",
                    "type": "string",
                    "editPresentation": "multilineText",
                    "default": "light: #111C2D, #00CDAB, #FFFFFF, #000000\ndark: #000000, #00CDAB, #333438, #FFFFFF",
                    "description": "%config.themesDesc%"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "build:elements-css": "node scripts/build-elements-lite-css.js",
        "build:codicons-css": "node scripts/build-codicons-css.js",
        "postinstall": "node scripts/build-elements-lite-css.js && node scripts/build-codicons-css.js"
    },
    "devDependencies": {
        "@types/node": "^24.1.0",
        "@types/vscode": "^1.72.0",
        "@vscode/l10n-dev": "^0.0.35",
        "@vscode/test-electron": "^2.2.3",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@vscode-elements/elements-lite": "^0.3.0",
        "@vscode/codicons": "^0.0.36",
        "@vscode/l10n": "^0.0.18"
    }
}